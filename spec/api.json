        "summary": "Check HTTP Server Status",
        "operationId": "isHealthy",
        "responses": {
          "200": {
            "description": " API server is ready to accept connections and always return \"ok\"."
          },
          "500": {
            "description": " API server is not yet ready to accept connections."
          }
        }
      }
    },
    "/readiness": {
      "get": {
        "description": "This endpoint returns a HTTP 200 status code when the API server is up running and the environment dependencies\n(e.g. the database) are responsive as well.",
        "summary": "Check HTTP Server and Database Status",
        "operationId": "isReady",
        "responses": {
          "200": {
            "description": " API server is ready to accept requests and always return \"ok\"."
